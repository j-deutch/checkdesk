      'variables' => array('url' => NULL, 'attributes' => NULL, 'title' => NULL),
      'template' => 'oembed-thumbnail',
      'path' => $path,
      'file' => $file,
    ),
    'meedan_oembed_link' => array(
      'variables' => array('path' => NULL, 'options' => NULL, 'text' => NULL),
      'path' => $path,
      'file' => $file,
    ),
