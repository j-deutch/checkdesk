  if (!checkdesk_yvr_access()) drupal_access_denied();

  $nid = @$_REQUEST['nid'];
  switch ($_SERVER['REQUEST_METHOD']) {
    case 'POST':
      return drupal_json_output(checkdesk_yvr_report_post($nid));
    default:
      // TODO watchdog
      // TODO 400 bad request
  }
}

