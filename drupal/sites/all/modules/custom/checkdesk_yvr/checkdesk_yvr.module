  global $user;
  // TODO check user access
  // TODO check existing $nid
  $url = @$_REQUEST['url'];
  // TODO validate url
  $report = checkdesk_yvr_import_report($url, $user->uid);
  // TODO validate report
  return [
    'report' => [
      'id' => $report->nid,
      'title' => $report->title,
      'body' => $report->body[LANGUAGE_NONE][0]['value'],
